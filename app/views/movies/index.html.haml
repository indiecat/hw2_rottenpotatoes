-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]"
  = submit_tag 'Refresh'

%table#movies
  %thead
    %tr
      %th{:class => (params[:sort] == "title") ? :hilite : :none}
        %a#title_header{:href => movies_path(:sort=>:title)} Movie Title
      %th Rating
      %th{:class => (params[:sort] == "release_date") ? :hilite : :none}
        %a#release_date_header{:href => movies_path(:sort=>:release_date)} Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
